<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="125dp">

    <TextView
        android:id="@+id/txtville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="138dp"
        android:layout_height="139dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="47dp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tep °C"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginTop="435dp"
        android:layout_marginLeft="47dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T° min :"
        android:textSize="18dp"
        android:layout_marginTop="522dp"
        android:layout_marginLeft="54dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T° max :"
        android:textSize="18dp"
        android:layout_marginTop="563dp"
        android:layout_marginLeft="54dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pression"
        android:textSize="18dp"
        android:layout_marginTop="607dp"
        android:layout_marginLeft="54dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidité"
        android:textSize="18dp"
        android:layout_marginTop="656dp"
        android:layout_marginLeft="58dp" />


    <TextView
        android:id="@+id/tempmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/tempmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="20dp"
        />



    <TextView
        android:id="@+id/pression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pression"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/humid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="humidité"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="20dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#6BB1E8"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />


    <Button
        android:id="@+id/bu_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#61A9E3"
        android:layout_marginTop="130dp"
        android:text="Localisation"
        android:layout_marginLeft="130dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="131dp" />

</RelativeLayout>
